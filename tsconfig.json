{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "isolatedModules": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "Java",
        "C#"
    ]
}